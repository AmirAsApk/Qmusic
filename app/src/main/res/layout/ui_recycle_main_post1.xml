<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right">

    <RelativeLayout
        android:id="@+id/ui_recycle_main_post1_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <ImageView
            android:id="@+id/ui_recycle_main_post1_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/ui_recycle_main_post1_tv_nameMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/ui_recycle_main_post1_image"
            android:fontFamily="@font/font_vazir"
            android:text="amit"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ui_recycle_main_post1_tv_nameSinger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ui_recycle_main_post1_tv_nameMusic"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/ui_recycle_main_post1_image"
            android:fontFamily="@font/font_vazir"
            android:text="as"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ui_recycle_main_post1_tv_nameSinger"
            android:layout_centerHorizontal="true"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ui_recycle_main_post1_tv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:maxEms="3"
                android:maxLines="1"
                android:text="000"
                android:textColor="@android:color/black"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_heart" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/ui_recycle_main_post1_tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:maxEms="3"
                android:maxLines="1"
                android:text="000"
                android:textColor="@android:color/black"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_comment" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ui_recycle_main_post1_image"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="5dp"
            android:alpha="0.3"
            android:background="@color/colorPrimary" />

        <ImageView
            android:id="@+id/ui_recycle_main_post1_btn_play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_btn_play_main"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_play"
            android:tag="play"
            />

        <ImageView

android:visibility="gone"
            android:id="@+id/ui_recycle_main_post1_btn_stop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_btn_play_main"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_pause"
            android:tag="play" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>