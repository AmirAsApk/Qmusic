<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/ui_recycle_show_category_layout"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ui_recycle_show_category_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/ui_recycle_show_category_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/ui_recycle_show_category_tv_name_singer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="19sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        >
        <TextView
            android:id="@+id/ui_recycle_show_category_tv_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12455"
            android:layout_marginRight="5dp"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_margin="2dp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_like1"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/ui_recycle_show_category_tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12455"
            />

    </LinearLayout>


</LinearLayout>