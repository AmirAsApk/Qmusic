<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ui_recycle_player_comment_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:alpha="0.5"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_user" />

    <TextView
        android:id="@+id/ui_recycle_player_comment_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/ui_recycle_player_comment_image"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/ui_recycle_player_comment_tv_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ui_recycle_player_comment_tv_name"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/ui_recycle_player_comment_image"
        android:minLines="2"
        android:textAlignment="textEnd"
        android:textColor="@android:color/darker_gray"
        android:textSize="15dp" />
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@android:color/darker_gray"
    android:layout_below="@id/ui_recycle_player_comment_tv_txt"
    android:layout_margin="5dp"
    />
</RelativeLayout>