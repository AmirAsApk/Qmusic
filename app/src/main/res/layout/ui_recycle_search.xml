<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ui_recycle_search_layout"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ui_recycle_search_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/ui_recycle_search_tv_nameSinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/ui_recycle_search_image"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/ui_recycle_search_tv_nameMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ui_recycle_search_tv_nameSinger"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/ui_recycle_search_image"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ui_recycle_search_image"
        android:layout_margin="5dp"
        android:background="@android:color/darker_gray" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ui_recycle_search_image"
        android:layout_marginLeft="15dp"
        >
        <TextView
            android:id="@+id/ui_recycle_search_tv_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12455"
            android:layout_marginRight="5dp"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_margin="2dp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_like1"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/ui_recycle_search_tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12455"
            />

    </LinearLayout>


</RelativeLayout>