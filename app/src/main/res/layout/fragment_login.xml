<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/fragment_login_et_email"
        android:hint="ایمیل یا شماره تلفن"
        style="@style/et_loginForm"
        />

    <EditText
        android:id="@+id/fragment_login_et_pass"
        android:hint="رمز ورود"
        style="@style/et_loginForm"/>
    <Button
        android:id="@+id/fragment_login_btn_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/font_vazir"
        android:text="ورود"
        android:textSize="23sp" />
</LinearLayout>